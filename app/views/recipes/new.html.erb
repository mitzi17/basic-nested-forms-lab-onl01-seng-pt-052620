<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
 
  <%= f.fields_for :ingredients do |item| %>
    <%= item.label :name %>
    <%= item.text_field :name %><br>
 
    <%= item.label :quantity %>
    <%= item.text_field :quantity %><br>

  <% end %>
 
  <%= f.submit %>
<% end %>
